<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_300sdp"
    android:padding="@dimen/_16sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_20sdp"
    android:background="@color/purple_200"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details_iv_close"
        android:src="@drawable/ic_close"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_16sdp"
        android:padding="@dimen/_4sdp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        >


        <TextView
            android:id="@+id/details_tv_year"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:text="1990"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/details_tv_awayTeamGoals"
            app:layout_constraintStart_toEndOf="@+id/details_tv_homeTeamGoals"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/details_tv_homeTeam"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:text="Brazil"
            android:layout_marginStart="@dimen/_16sdp"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/details_tv_awayTeamGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:text="4"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_16sdp"
            />

        <TextView
            android:id="@+id/details_tv_homeTeamGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:text="2"
            android:layout_marginEnd="@dimen/_16sdp"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:text="-"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/details_tv_awayTeam"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:text="Brazil"
            android:layout_marginEnd="@dimen/_16sdp"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/details_tv_stadium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:text="stadium"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/details_tv_awayTeamGoals"
            app:layout_constraintStart_toEndOf="@+id/details_tv_homeTeamGoals"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_16sdp"
        >
        <TextView
            android:gravity="center"
            android:textColor="@color/text_color"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="Match Year :"
            android:layout_marginStart="@dimen/_8sdp"
            android:padding="@dimen/_4sdp"
            android:textSize="@dimen/_14ssp"
            />
        <TextView
            android:layout_marginStart="@dimen/_8sdp"
            android:id="@+id/details_tv_city"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="city"
            android:textSize="@dimen/_14ssp"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_16sdp"
        >
        <TextView
            android:textColor="@color/text_color"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="Attendence :"
            android:gravity="center"
            android:layout_marginStart="@dimen/_8sdp"
            android:padding="@dimen/_4sdp"
            android:textSize="@dimen/_14ssp"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/details_tv_attendence"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="@dimen/_4sdp"
            android:layout_height="wrap_content"
            android:text="7728"
            android:textSize="@dimen/_14ssp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_16sdp"
        >
        <TextView
            android:textColor="@color/text_color"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="Referee :"
            android:gravity="center"
            android:layout_marginStart="@dimen/_8sdp"
            android:padding="@dimen/_4sdp"
            android:textSize="@dimen/_14ssp"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/details_tv_referee"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="@dimen/_4sdp"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="@dimen/_14ssp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_16sdp"
        >
        <TextView
            android:textColor="@color/text_color"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="Assistant 1 :"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_14ssp"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/details_tv_assistant1"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="@dimen/_4sdp"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="@dimen/_14ssp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_16sdp"
        >
        <TextView
            android:textColor="@color/text_color"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="Assistant 2 :"
            android:padding="@dimen/_4sdp"
            android:gravity="center"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_14ssp"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/details_tv_assistant2"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="@dimen/_4sdp"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="@dimen/_14ssp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_16sdp"
        >
        <TextView
            android:textColor="@color/text_color"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="Date Time :"
            android:padding="@dimen/_4sdp"
            android:gravity="center"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_14ssp"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/details_tv_dateTime"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="@dimen/_4sdp"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="@dimen/_14ssp"
            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>